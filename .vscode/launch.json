    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "fluffie_app",
            "envFile": "${workspaceFolder}/.env",
            "console": "internalConsole",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}